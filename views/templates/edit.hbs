<div class="container">
  <h2 class="header__text">Edit task: {{todos.title}}</h2>
  {{!-- <h5>{{todos.id}}</h5> --}}
  <div class="todo__content">
    <form class="main__form" autocomplete="off" method="POST" action="/todolist/edited/{{todos.id}}?_method=PUT">

      <input
        type="text"
        name="todos"
        placeholder="Edit..."
      >
      <input 
        type="submit"
        value="Edit"
      >

    </form>
  </div>

  {{> go_back}}

</div>